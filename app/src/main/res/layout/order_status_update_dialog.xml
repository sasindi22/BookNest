<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutUpdateStatus"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightGrey"
    android:orientation="vertical"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:paddingTop="30dp"
    android:paddingBottom="30dp">

    <RadioGroup
        android:id="@+id/radioGroupUpdate"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioButton
            android:id="@+id/radioButtonPaid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/merriweather_regular"
            android:text="Paid"
            android:textColor="@color/darkBrown"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radioButtonShipped"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/merriweather_regular"
            android:text="Shipped"
            android:textColor="@color/darkBrown"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radioButtonDelivered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/merriweather_regular"
            android:text="Delivered"
            android:textColor="@color/darkBrown"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radioButtonCancelled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/merriweather_regular"
            android:text="Cancelled"
            android:textColor="@color/darkBrown"
            android:textSize="20sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp"/>

        <Button
            android:id="@+id/buttonUpdateStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/darkBrown"
            android:fontFamily="@font/poppins_regular"
            android:text="Update Status"
            android:textColor="@color/lightGrey"
            android:textSize="20dp" />
    </RadioGroup>
</LinearLayout>